            <option value="adductors">Adductors</option>
            <option value="biceps">Biceps</option>
            <option value="calves">Calves</option>
            <option value="chest">Chest</option>
            <option value="forearms">Forearms</option>
            <option value="glutes">Glutes</option>
            <option value="hamstrings">Hamstrings</option>
            <option value="lats">Lats</option>
            <option value="lower back">Lower back</option>
            <option value="middle back">Middle back</option>
            <option value="neck">Neck</option>
            <option value="quadriceps">Quadriceps</option>
            <option value="shoulders">Shoulders</option>
            <option value="stationary">Stationary</option>
            <option value="traps">Traps</option>
            <option value="treadmill">Treadmill</option>
            <option value="triceps">Triceps</option>
        </select>
    </form>



</div>

<div class="ribbons l-box-lrg pure-g">
    <div class="l-box-lrg is-center pure-u-1 pure-u-md-1-2 pure-u-lg-2-5">
    </div>
    <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-3-5">

        {{!-- Place where the full workout will be displayed,
        based on what the user displays and then saves --}}
        <h2 id="fulltext" class="content-head content-head-ribbon">Exercises to choose from</h2>

        <div>
            {{!-- Div that will display text if no exercises are found --}}
            <div id="noExercisesFound"></div>

            {{!-- Div that will display a selection of exercises if any are found --}}
            <div id="exerciseDisplay"></div>
        </div>

